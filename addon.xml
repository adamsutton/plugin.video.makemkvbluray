<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon 
  id="plugin.video.makemkvbluray" 
	version="0.0.0" 
  name="BluRay Player (MakeMKV)"
  provider-name="Adam Sutton (dev@adamsutton.me.uk)">
	<requires>
		<import addon="xbmc.python" version="2.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.service" library="service.py"/>
	<extension point="xbmc.addon.metadata">
		<summary>BluRay Player (MakeMKV)</summary>
		<description>Allows playback of blu-ray discs using the makemkv package (which must be installed separately).</description>
		<platform>linux</platform>
	</extension>
</addon>
